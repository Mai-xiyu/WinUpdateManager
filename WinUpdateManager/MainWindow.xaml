<Window x:Class="WinUpdateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WinUpdateManager.Converters"
        xmlns:vm="clr-namespace:WinUpdateManager.ViewModels"
        Title="Windows 更新管理工具"
        Width="1200" Height="780"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource DarkWindowStyle}">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="B2V"/>
        <converters:CategoryToColorConverter x:Key="Cat2Color"/>
        <converters:OperationStatusToColorConverter x:Key="Status2Color"/>
        <converters:DateFormatConverter x:Key="DateFmt"/>
        <converters:SecurityRiskConverter x:Key="Risk2Color"/>
        <converters:LogErrorToColorConverter x:Key="Log2Color"/>
        <converters:CountToVisibilityConverter x:Key="Count2Vis"/>

        <!-- 共享 DataGrid 样式，避免每个 Tab 重复定义 -->
        <Style x:Key="GridColHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BgDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
        </Style>
        <Style x:Key="GridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BgHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource BgSelectedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="GridCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- 顶栏（标题 + 工具） -->
            <RowDefinition Height="Auto"/>   <!-- 进度条 -->
            <RowDefinition Height="*"/>      <!-- 主内容 -->
            <RowDefinition Height="Auto"/>   <!-- 日志面板 -->
            <RowDefinition Height="Auto"/>   <!-- 状态栏 -->
        </Grid.RowDefinitions>

        <!-- ═══════ Row 0: 顶栏（标题 + 搜索 + 按钮） ═══════ -->
        <Border Grid.Row="0" Background="{StaticResource BgDarkBrush}" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>   <!-- 标题 -->
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>      <!-- 搜索框 -->
                    <ColumnDefinition Width="Auto"/>   <!-- 按钮组 -->
                </Grid.ColumnDefinitions>

                <!-- 标题 -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Windows 更新管理工具"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="扫描中..." FontSize="11"
                                   Foreground="{StaticResource AccentBlueBrush}"
                                   Visibility="{Binding IsLoading, Converter={StaticResource B2V}}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 搜索框 -->
                <TextBox Grid.Column="2" Style="{StaticResource SearchTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"/>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <Button Style="{StaticResource ModernButton}" Content="刷新"
                            Command="{Binding RefreshCommand}" Margin="0,0,4,0"
                            ToolTip="重新扫描所有更新记录"/>
                    <Button Style="{StaticResource ModernButton}" Content="全选"
                            Command="{Binding SelectAllCommand}" Margin="0,0,4,0"
                            ToolTip="选中当前分类下的所有更新"/>
                    <Button Style="{StaticResource ModernButton}" Content="取消"
                            Command="{Binding DeselectAllCommand}" Margin="0,0,4,0"
                            ToolTip="取消所有选中"/>
                    <Border Width="1" Background="{StaticResource BorderDefaultBrush}" Margin="4,4"/>
                    <Button Style="{StaticResource ModernButton}" Content="还原点"
                            Command="{Binding CreateRestorePointCommand}" Margin="4,0,4,0"
                            ToolTip="创建系统还原点（建议删除前执行）"/>
                    <Button Style="{StaticResource ModernButton}" Content="导出 CSV"
                            Command="{Binding ExportCsvCommand}" Margin="0,0,4,0"
                            ToolTip="导出为 CSV 文件"/>
                    <Button Style="{StaticResource ModernButton}" Content="导出 TXT"
                            Command="{Binding ExportTxtCommand}" Margin="0,0,4,0"
                            ToolTip="导出为纯文本文件"/>
                    <Border Width="1" Background="{StaticResource BorderDefaultBrush}" Margin="4,4"/>
                    <Button Style="{StaticResource DangerButton}" Margin="4,0,0,0"
                            Command="{Binding DeleteSelectedCommand}"
                            ToolTip="删除所有选中的更新">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="删除选中"/>
                            <TextBlock Margin="4,0,0,0" FontWeight="Bold"
                                       Text="{Binding SelectedCount, StringFormat='({0})'}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════ Row 1: 进度条 ═══════ -->
        <ProgressBar Grid.Row="1" Style="{StaticResource ModernProgressBar}"
                     Value="{Binding ProgressValue}" Maximum="{Binding ProgressMax}"
                     Visibility="{Binding IsProgressVisible, Converter={StaticResource B2V}}"
                     Margin="0,0,0,0"/>

        <!-- ═══════ Row 2: 主内容区（TabControl + 详情面板） ═══════ -->
        <Grid Grid.Row="2" Margin="20,10,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>            <!-- 列表区 -->
                <ColumnDefinition Width="Auto"/>         <!-- 分隔线 -->
                <ColumnDefinition Width="300" MinWidth="200"/> <!-- 详情面板 -->
            </Grid.ColumnDefinitions>

            <!-- ─── 左侧：Tab + 列表 ─── -->
            <TabControl Grid.Column="0"
                        Style="{StaticResource ModernTabControl}"
                        SelectedIndex="{Binding SelectedTabIndex}">

                <!-- Tab: 质量更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="质量更新"/>
                            <TextBlock Text="{Binding QualityCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="0,8,8,8" Padding="1">
                        <DataGrid ItemsSource="{Binding QualityUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="{StaticResource BgCardBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="{StaticResource BgCardBrush}"
                                  AlternatingRowBackground="{StaticResource BgMediumBrush}"
                                  BorderThickness="0" RowHeight="38" ColumnHeaderHeight="36"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="KB 编号" Binding="{Binding KBArticleID}" Width="110"/>
                                <DataGridTextColumn Header="更新名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Tab: 驱动程序更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="驱动程序"/>
                            <TextBlock Text="{Binding DriverCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="0,8,8,8" Padding="1">
                        <DataGrid ItemsSource="{Binding DriverUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="{StaticResource BgCardBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="{StaticResource BgCardBrush}"
                                  AlternatingRowBackground="{StaticResource BgMediumBrush}"
                                  BorderThickness="0" RowHeight="38" ColumnHeaderHeight="36"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="驱动名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="INF" Binding="{Binding DriverInfName}" Width="100"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Tab: 定义更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="定义更新"/>
                            <TextBlock Text="{Binding DefinitionCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="0,8,8,8" Padding="1">
                        <DataGrid ItemsSource="{Binding DefinitionUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="{StaticResource BgCardBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="{StaticResource BgCardBrush}"
                                  AlternatingRowBackground="{StaticResource BgMediumBrush}"
                                  BorderThickness="0" RowHeight="38" ColumnHeaderHeight="36"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="KB 编号" Binding="{Binding KBArticleID}" Width="110"/>
                                <DataGridTextColumn Header="更新名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Tab: 其他更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="其他"/>
                            <TextBlock Text="{Binding OtherCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="0,8,8,8" Padding="1">
                        <DataGrid ItemsSource="{Binding OtherUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="{StaticResource BgCardBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="{StaticResource BgCardBrush}"
                                  AlternatingRowBackground="{StaticResource BgMediumBrush}"
                                  BorderThickness="0" RowHeight="38" ColumnHeaderHeight="36"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="KB 编号" Binding="{Binding KBArticleID}" Width="110"/>
                                <DataGridTextColumn Header="更新名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- 分隔线 -->
            <Border Grid.Column="1" Width="1" Background="{StaticResource BorderDefaultBrush}" Margin="12,0"/>

            <!-- ─── 右侧：详情面板 ─── -->
            <Border Grid.Column="2" Background="{StaticResource BgCardBrush}" 
                    CornerRadius="8" Padding="16">
                <Grid>
                    <!-- 无选中时 -->
                    <TextBlock Text="选择一项更新以查看详情"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="13"
                               Visibility="{Binding HasSelectedDetail, Converter={StaticResource B2V}, ConverterParameter=Invert}"/>

                    <!-- 详情内容 -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding HasSelectedDetail, Converter={StaticResource B2V}}">
                        <StackPanel DataContext="{Binding SelectedUpdate}">
                            <!-- 标题 -->
                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <!-- 分类 -->
                            <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="分类"/>
                            <TextBlock Text="{Binding CategoryDisplayName}" FontSize="13" Margin="0,2,0,10"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                            <!-- 风险警告 -->
                            <Border Padding="8,5" Margin="0,0,0,10"
                                    Background="#20EF4444"
                                    Visibility="{Binding IsLatestSecurity, Converter={StaticResource B2V}}">
                                <TextBlock Text="注意: 这是最新的安全更新，删除后可能影响系统安全"
                                           Foreground="{StaticResource AccentRedBrush}" FontSize="12"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- 信息行 -->
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="KB 编号"/>
                                <TextBlock Text="{Binding KBArticleID, TargetNullValue=无}" FontSize="13" Margin="0,2,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="安装日期"/>
                                <TextBlock Text="{Binding InstalledDate, Converter={StaticResource DateFmt}}" FontSize="13" Margin="0,2,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="版本号"/>
                                <TextBlock Text="{Binding BuildVersion, TargetNullValue=—}" FontSize="13" Margin="0,2,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="卸载方式"/>
                                <TextBlock Text="{Binding UninstallMethodDisplay}" FontSize="13" Margin="0,2,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,8"
                                        Visibility="{Binding DriverInfName, Converter={StaticResource B2V}}"
                                        DataContext="{Binding}">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="驱动 INF"/>
                                <TextBlock Text="{Binding DriverInfName}" FontSize="13" Margin="0,2,0,0"
                                           Foreground="{StaticResource AccentGreenBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,8"
                                        Visibility="{Binding PackageIdentity, Converter={StaticResource B2V}}"
                                        DataContext="{Binding}">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="DISM 包名"/>
                                <TextBlock Text="{Binding PackageIdentity}" FontSize="11" Margin="0,2,0,0"
                                           Foreground="{StaticResource AccentBlueBrush}" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- 描述 -->
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" Text="描述"/>
                                <TextBlock Text="{Binding Description, TargetNullValue=无描述信息}" 
                                           FontSize="12" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" MaxHeight="120"/>
                            </StackPanel>

                            <!-- 操作状态 -->
                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Text="{Binding OperationStatusDisplay}" FontSize="13"
                                           Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"/>
                                <TextBlock Text="{Binding StatusMessage}" FontSize="11" Margin="0,2,0,0"
                                           Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"
                                           MaxHeight="60"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- ═══════ Row 3: 日志面板 ═══════ -->
        <Border Grid.Row="3" Margin="20,8,20,0">
            <Expander IsExpanded="False" BorderThickness="0">
                <Expander.Header>
                    <TextBlock Text="操作日志" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                </Expander.Header>
                <ListBox ItemsSource="{Binding Logs}" Style="{StaticResource LogListBox}"
                         Height="120" BorderThickness="1" 
                         BorderBrush="{StaticResource BorderDefaultBrush}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Display}" 
                                       Foreground="{Binding IsError, Converter={StaticResource Log2Color}}"
                                       FontSize="11"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
        </Border>

        <!-- ═══════ Row 4: 状态栏 ═══════ -->
        <Border Grid.Row="4" Background="{StaticResource BgDarkBrush}" Padding="20,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusText}" 
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11" VerticalAlignment="Center">
                        <Run Text="总计"/>
                        <Run Text="{Binding TotalCount, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="项 | 已选"/>
                        <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource AccentBlueBrush}"/>
                        <Run Text="项"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
