<Window x:Class="WinUpdateManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WinUpdateManager.Converters"
        xmlns:vm="clr-namespace:WinUpdateManager.ViewModels"
        Title="Windows 更新管理工具"
        Width="1200" Height="780"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource DarkWindowStyle}"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" CaptionHeight="32" CornerRadius="8" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="B2V"/>
        <converters:CategoryToColorConverter x:Key="Cat2Color"/>
        <converters:OperationStatusToColorConverter x:Key="Status2Color"/>
        <converters:DateFormatConverter x:Key="DateFmt"/>
        <converters:SecurityRiskConverter x:Key="Risk2Color"/>
        <converters:LogErrorToColorConverter x:Key="Log2Color"/>
        <converters:CountToVisibilityConverter x:Key="Count2Vis"/>

        <!-- 共享 DataGrid 样式，避免每个 Tab 重复定义 -->
        <Style x:Key="GridColHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
        </Style>
        <Style x:Key="GridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BgHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource BgSelectedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="GridCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>     <!-- 自定义标题栏 -->
            <RowDefinition Height="Auto"/>   <!-- 标题区域 -->
            <RowDefinition Height="Auto"/>   <!-- 工具栏 -->
            <RowDefinition Height="Auto"/>   <!-- 进度条 -->
            <RowDefinition Height="*"/>      <!-- 主内容 -->
            <RowDefinition Height="Auto"/>   <!-- 日志面板 -->
            <RowDefinition Height="Auto"/>   <!-- 状态栏 -->
        </Grid.RowDefinitions>

        <!-- ═══════ Row 0: 自定义标题栏 ═══════ -->
        <Grid Grid.Row="0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                <Image Source="app.ico" Width="16" Height="16" Margin="0,0,8,0"/>
                <TextBlock Text="Windows 更新管理工具" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Style="{StaticResource TitleBarButtonStyle}" Content="&#xE921;" Click="MinimizeButton_Click" ToolTip="最小化"/>
                <Button Style="{StaticResource TitleBarButtonStyle}" Content="&#xE922;" Click="MaximizeButton_Click" ToolTip="最大化"/>
                <Button Style="{StaticResource TitleBarCloseButtonStyle}" Content="&#xE8BB;" Click="CloseButton_Click" ToolTip="关闭"/>
            </StackPanel>
        </Grid>

        <!-- ═══════ Row 1: 标题区域 ═══════ -->
        <Border Grid.Row="1" Padding="24,16,24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Windows 更新管理工具" 
                               FontSize="28" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="查看、管理和删除所有 Windows 更新（质量更新 / 驱动程序 / 定义更新 / 其他更新）"
                               FontSize="14" Margin="0,4,0,0"
                               Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>

                <!-- 加载指示器 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource B2V}}">
                    <TextBlock Text="&#xE895;" FontFamily="Segoe Fluent Icons" FontSize="16" Margin="0,0,8,0" Foreground="{StaticResource AccentBlueBrush}"/>
                    <TextBlock Text="扫描中..." Foreground="{StaticResource AccentBlueBrush}" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════ Row 2: 工具栏 ═══════ -->
        <Border Grid.Row="2" Padding="24,4,24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>  <!-- 搜索框 -->
                    <ColumnDefinition Width="Auto"/> <!-- 按钮组 -->
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox Grid.Column="0" Style="{StaticResource SearchTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         MaxWidth="400" HorizontalAlignment="Left"/>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource ModernButton}" Command="{Binding RefreshCommand}" Margin="0,0,8,0" ToolTip="重新扫描所有更新记录">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="刷新" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Command="{Binding SelectAllCommand}" Margin="0,0,8,0" ToolTip="选中当前分类下的所有更新">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE73A;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="全选" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Command="{Binding DeselectAllCommand}" Margin="0,0,8,0" ToolTip="取消所有选中">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A6;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="取消" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Border Width="1" Background="{StaticResource BorderDefaultBrush}" Margin="8,4"/>

                    <Button Style="{StaticResource ModernButton}" Command="{Binding CreateRestorePointCommand}" Margin="8,0,8,0" ToolTip="创建系统还原点（建议删除前执行）">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A6;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="还原点" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ModernButton}" Command="{Binding ExportCsvCommand}" Margin="0,0,8,0" ToolTip="导出为 CSV 文件">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="CSV" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Command="{Binding ExportTxtCommand}" Margin="0,0,8,0" ToolTip="导出为纯文本文件">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="TXT" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Border Width="1" Background="{StaticResource BorderDefaultBrush}" Margin="8,4"/>

                    <Button Style="{StaticResource DangerButton}" Margin="8,0,0,0"
                            Command="{Binding DeleteSelectedCommand}"
                            ToolTip="删除所有选中的更新">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe Fluent Icons" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="删除选中" VerticalAlignment="Center"/>
                            <TextBlock Margin="6,0,0,0" FontWeight="Bold"
                                       Text="{Binding SelectedCount, StringFormat='({0})'}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════ Row 3: 进度条 ═══════ -->
        <ProgressBar Grid.Row="3" Style="{StaticResource ModernProgressBar}"
                     Value="{Binding ProgressValue}" Maximum="{Binding ProgressMax}"
                     Visibility="{Binding IsProgressVisible, Converter={StaticResource B2V}}"
                     Margin="0,0,0,0"/>

        <!-- ═══════ Row 4: 主内容区（TabControl + 详情面板） ═══════ -->
        <Grid Grid.Row="4" Margin="24,12,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>            <!-- 列表区 -->
                <ColumnDefinition Width="Auto"/>         <!-- 分隔线 -->
                <ColumnDefinition Width="320" MinWidth="250"/> <!-- 详情面板 -->
            </Grid.ColumnDefinitions>

            <!-- ─── 左侧：Tab + 列表 ─── -->
            <TabControl Grid.Column="0"
                        Style="{StaticResource ModernTabControl}"
                        SelectedIndex="{Binding SelectedTabIndex}">

                <!-- Tab: 质量更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE895;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="质量更新" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding QualityCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="8" Padding="1" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding QualityUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent"
                                  BorderThickness="0" RowHeight="42" ColumnHeaderHeight="40"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="48">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="KB 编号" Binding="{Binding KBArticleID}" Width="110"/>
                                <DataGridTextColumn Header="更新名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Tab: 驱动程序更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE9A1;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="驱动程序" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding DriverCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="8" Padding="1" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding DriverUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent"
                                  BorderThickness="0" RowHeight="42" ColumnHeaderHeight="40"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="48">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="驱动名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="INF" Binding="{Binding DriverInfName}" Width="100"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Tab: 定义更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A7;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="定义更新" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding DefinitionCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="8" Padding="1" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding DefinitionUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent"
                                  BorderThickness="0" RowHeight="42" ColumnHeaderHeight="40"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="48">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="KB 编号" Binding="{Binding KBArticleID}" Width="110"/>
                                <DataGridTextColumn Header="更新名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>

                <!-- Tab: 其他更新 -->
                <TabItem Style="{StaticResource ModernTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE712;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="其他" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding OtherCount, StringFormat=' ({0})'}" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="8" Padding="1" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding OtherUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="False" SelectionMode="Single"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent"
                                  BorderThickness="0" RowHeight="42" ColumnHeaderHeight="40"
                                  ColumnHeaderStyle="{StaticResource GridColHeader}"
                                  RowStyle="{StaticResource GridRow}"
                                  CellStyle="{StaticResource GridCell}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="48">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="KB 编号" Binding="{Binding KBArticleID}" Width="110"/>
                                <DataGridTextColumn Header="更新名称" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="安装日期" Binding="{Binding InstalledDate, Converter={StaticResource DateFmt}}" Width="140"/>
                                <DataGridTextColumn Header="卸载方式" Binding="{Binding UninstallMethodDisplay}" Width="80"/>
                                <DataGridTemplateColumn Header="状态" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OperationStatusDisplay}"
                                                       Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- 分隔线 -->
            <Border Grid.Column="1" Width="1" Background="{StaticResource BorderDefaultBrush}" Margin="16,0"/>

            <!-- ─── 右侧：详情面板 ─── -->
            <Border Grid.Column="2" Background="{StaticResource BgCardBrush}" 
                    CornerRadius="8" Padding="20" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                <Grid>
                    <!-- 无选中时 -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding HasSelectedDetail, Converter={StaticResource B2V}, ConverterParameter=Invert}">
                        <TextBlock Text="&#xE946;" FontFamily="Segoe Fluent Icons" FontSize="48" Foreground="{StaticResource BorderDefaultBrush}" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="选择一项更新以查看详情"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>

                    <!-- 详情内容 -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding HasSelectedDetail, Converter={StaticResource B2V}}">
                        <StackPanel DataContext="{Binding SelectedUpdate}">
                            <!-- 标题 -->
                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,16"/>

                            <!-- 分类 -->
                            <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="分类"/>
                            <TextBlock Text="{Binding CategoryDisplayName}" FontSize="14" Margin="0,4,0,16"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                            <!-- 风险警告 -->
                            <Border Padding="12,8" Margin="0,0,0,16" CornerRadius="4"
                                    Background="#20EF4444" BorderBrush="#40EF4444" BorderThickness="1"
                                    Visibility="{Binding IsLatestSecurity, Converter={StaticResource B2V}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource AccentRedBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="注意: 这是最新的安全更新，删除后可能影响系统安全"
                                               Foreground="{StaticResource AccentRedBrush}" FontSize="12"
                                               TextWrapping="Wrap" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 信息行 -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="KB 编号"/>
                                <TextBlock Text="{Binding KBArticleID, TargetNullValue=无}" FontSize="14" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="安装日期"/>
                                <TextBlock Text="{Binding InstalledDate, Converter={StaticResource DateFmt}}" FontSize="14" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="版本号"/>
                                <TextBlock Text="{Binding BuildVersion, TargetNullValue=—}" FontSize="14" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="卸载方式"/>
                                <TextBlock Text="{Binding UninstallMethodDisplay}" FontSize="14" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12"
                                        Visibility="{Binding DriverInfName, Converter={StaticResource B2V}}"
                                        DataContext="{Binding}">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="驱动 INF"/>
                                <TextBlock Text="{Binding DriverInfName}" FontSize="14" Margin="0,4,0,0"
                                           Foreground="{StaticResource AccentGreenBrush}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,12"
                                        Visibility="{Binding PackageIdentity, Converter={StaticResource B2V}}"
                                        DataContext="{Binding}">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="DISM 包名"/>
                                <TextBlock Text="{Binding PackageIdentity}" FontSize="12" Margin="0,4,0,0"
                                           Foreground="{StaticResource AccentBlueBrush}" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- 描述 -->
                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12" Text="描述"/>
                                <TextBlock Text="{Binding Description, TargetNullValue=无描述信息}" 
                                           FontSize="13" Margin="0,6,0,0"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" MaxHeight="160"/>
                            </StackPanel>

                            <!-- 操作状态 -->
                            <StackPanel Margin="0,16,0,0">
                                <TextBlock Text="{Binding OperationStatusDisplay}" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{Binding OperationStatus, Converter={StaticResource Status2Color}}"/>
                                <TextBlock Text="{Binding StatusMessage}" FontSize="12" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"
                                           MaxHeight="80"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- ═══════ Row 5: 日志面板 ═══════ -->
        <Border Grid.Row="5" Margin="24,12,24,0">
            <Expander IsExpanded="False" BorderThickness="0" Background="Transparent">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE81C;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="操作日志" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>
                </Expander.Header>
                <ListBox ItemsSource="{Binding Logs}" Style="{StaticResource LogListBox}"
                         Height="140" BorderThickness="1" 
                         BorderBrush="{StaticResource BorderDefaultBrush}"
                         Background="{StaticResource BgCardBrush}"
                         Margin="0,8,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Display}" 
                                       Foreground="{Binding IsError, Converter={StaticResource Log2Color}}"
                                       FontSize="12"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
        </Border>

        <!-- ═══════ Row 6: 状态栏 ═══════ -->
        <Border Grid.Row="6" Padding="24,12,24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusText}" 
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="13" VerticalAlignment="Center">
                        <Run Text="总计"/>
                        <Run Text="{Binding TotalCount, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="项 | 已选"/>
                        <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource AccentBlueBrush}"/>
                        <Run Text="项"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
